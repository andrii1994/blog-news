<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">blog_news_form.blog_news_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save_and_continue" class="Blog\News\Block\Adminhtml\Post\Edit\SaveAndContinueButton"/>
            <button name="save" class="Blog\News\Block\Adminhtml\Post\Edit\SaveButton"/>
            <button name="reset" class="Blog\News\Block\Adminhtml\Post\Edit\ResetButton"/>
            <button name="delete" class="Blog\News\Block\Adminhtml\Post\Edit\DeleteButton"/>
            <button name="back" class="Blog\News\Block\Adminhtml\Post\Edit\BackButton"/>
        </buttons>
        <namespace>blog_news_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>blog_news_form.blog_news_form_data_source</dep>
        </deps>
    </settings>
    <dataSource name="blog_news_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="blognews/post/save"/>
        </settings>
        <dataProvider class="Blog\News\Model\Post\DataProvider" name="blog_news_form_data_source">
            <settings>
                <primaryFieldName>post_id</primaryFieldName>
                <requestFieldName>post_id</requestFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label/>
        </settings>
        <field name="post_id" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <dataScope>post_id</dataScope>
            </settings>
        </field>
        <field name="status" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Post</label>
                <dataScope>status</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="name" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Post Name</label>
                <dataScope>name</dataScope>
            </settings>
        </field>
        <field name="url_key" formElement="input" sortOrder="30">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">URL Key</label>
                <dataScope>url_key</dataScope>
            </settings>
        </field>
        <field name="storeviews" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>int</dataType>
                <label translate="true">Store View</label>
                <dataScope>store_id</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="Blog\News\Ui\Component\Listing\Column\Post\Options"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
        <field name="featured_image">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="source" xsi:type="string">featured_image</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="label" translate="true" xsi:type="string">Featured Image</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="componentType" xsi:type="string">fileUploader</item>
                    <item name="notice" xsi:type="string" translate="true">Allowed file types: jpg, jpeg, gif, png
                    </item>
                    <item name="maxFileSize" xsi:type="number">2097152</item>
                    <item name="allowedExtensions" xsi:type="string">jpg jpeg gif png</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="blognews/post/imageUploader"/>
                    </item>
                    <item name="sortOrder" xsi:type="string">40</item>
                </item>
            </argument>
        </field>

        <!-- todo: add ui cimponent for tag field :)  -->
        <field name="tags" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Tags</label>
                <dataScope>tags</dataScope>
                <notice translate="true">Enter different tags separated by comma (,). E.g.: tag1,tag2,...etc.</notice>
            </settings>
        </field>

        <field name="post_content" formElement="wysiwyg" sortOrder="60">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">post</item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label/>
                <dataScope>post_content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
    </fieldset>
</form>
